<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="ToolTip" Value="{Binding Path=Text, RelativeSource={RelativeSource Self}}" />
    </Style>
    <Style TargetType="ListViewItem">
        <Setter Property="ToolTip" Value="{Binding Path=DataContext.Name, RelativeSource={RelativeSource Self}}" />
    </Style>
    <Style TargetType="ProgressBar">
        <Setter Property="ToolTip" Value="{Binding Path=Value, RelativeSource={RelativeSource Self}}" />
        <Style.Triggers>
            <Trigger Property="Value" Value="0">
                <Setter Property="ToolTip" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Button">
        <Setter Property="ToolTip" Value="{Binding Path=Content, RelativeSource={RelativeSource Self}}" />
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="ToolTip" Value="{Binding Path=Content, RelativeSource={RelativeSource Self}}" />
    </Style>
</ResourceDictionary>